      "chainId": 84532
    }
  },
  "etherscan": {
    "apiKey": {
      "base-sepolia": "${BASESCAN_API_KEY}"
    },
    "customChains": [
      {
        "network": "base-sepolia",
        "chainId": 84532,
        "urls": {
          "apiURL": "https://api-sepolia.basescan.org/api",
          "browserURL": "https://sepolia.basescan.org"
        }
      }
    ]
  }
