{
  "paths": {
    "artifacts": "./artifacts",
    "cache": "./cache",
    "sources": "./contracts",
    "tests": "./tests"
  },
  "solidity": {
    "version": "0.8.20",
    "settings": {
      "optimizer": {
        "enabled": true,
        "runs": 200
      }
    }
  },
  "networks": {
    "base-sepolia": {
      "url": "https://sepolia.base.org",
      "chainId": 84532,
      "accounts": ["${ADMIN_PRIVATE_KEY}"],
